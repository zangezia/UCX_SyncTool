<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <Nullable>enable</Nullable>
    <AssemblyName>UCX.SyncTool</AssemblyName>
    <RootNamespace>UCXSyncTool</RootNamespace>
    <!-- Application icon generated from logo.tif -->
    <ApplicationIcon>Assets\icon.ico</ApplicationIcon>
  </PropertyGroup>
  <ItemGroup>
    <!-- Embed the app icon as a resource so it can be used via pack URI at runtime -->
    <Resource Include="Assets\icon.ico" />
  </ItemGroup>
  <ItemGroup>
    <!-- Use the original high-resolution logo.tif from repository root and copy it into the app output under Assets\logo.tif -->
    <Content Include="..\logo.tif">
      <Link>Assets\logo.tif</Link>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
